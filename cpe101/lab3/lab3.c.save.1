#include <math.h>

    double Spheredist(float distance) {

float  x1, x2, y1, y2, z1, z2;
float  collisionpoint, rad1, rad2;
float distance;

  printf("This program will test if two objects are colliding\n");
  printf("Please enter the center of one object\n"); 
  printf("Object 1 x:");
  scanf("%f", &x1);
  printf("Object 1 y:");
  scanf("%f", &y1);
  printf("Object 1 z:");
  scanf("%f", &z1);
  printf("Object 1 radius:\n");
  scanf("%f", &rad1);
  printf("Please enter the center of the second object\n");
  printf("Object 2 x:");
  scanf("%f", &x2);
  printf("Object 2 y:");
  scanf("%f", &y2);
  printf("Object 2 z:");
  scanf("%f", &z2);
  printf("Object 2 radius:\n");
  scanf("%f", &rad1);

distance = sqrt( (x2-x1)*(x2-x1) + (y2-y1)*(y2-y1) + (z2-z1)*(z2-z1) );
collisionpoint = rad1 + rad2;
  
}

    int main(void) {

     Spheredist();

	if (distance <= collisionpoint) {
	printf("Objects are colliding!\n");
	return(1);
    }else{
	printf("Objects are not colliding.");
	return(0);
    }    
}
